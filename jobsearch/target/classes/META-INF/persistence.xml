<?xml version="1.0" encoding="UTF-8"?>
<persistence
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.2">
	<persistence-unit name="jobsearch">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>com.cg.entity.Employer</class>
		<class>com.cg.entity.Job</class>
		<class>com.cg.entity.JobSeeker</class>
		<class>com.cg.entity.Login</class>
		<class>com.cg.entity.Message</class>

		<properties>
			<property name="javax.persistence.jdbc.url"
				value="jdbc:postgresql://localhost:5432/jobsearch" />
			<property name="javax.persistence.jdbc.user"
				value="postgres" />
			<property name="javax.persistence.jdbc.password" value="123" />
			<property name="javax.persistence.jdbc.driver"
				value="org.postgresql.Driver" />
			<property
				name="javax.persistence.schema-generation.database.action"
				value="update" />
			<property name="hibernate.dialect"
				value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.show_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>